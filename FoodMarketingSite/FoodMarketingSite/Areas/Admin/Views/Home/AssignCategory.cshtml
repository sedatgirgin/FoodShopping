@model List<FoodAssignCatagoryModel>

    <form asp-action="AssignCategory" asp-controller="Home" asp-area="Admin" method="post">

        @for(int i = 0; i < Model.Count; i++)
        {
        <div class="form-check">
            @*id name description a ihtiyacımız olmadığı için "hidden yaptım. Fakat yine yanımda taşıyorum." *@
            <input type="hidden" asp-for="@Model[i].CategoryID"/>
            <input type="hidden" asp-for="@Model[i].CategoryName"/>
            <input type="hidden" asp-for="@Model[i].CategoryDescription"/>

            <input type="checkbox" asp-for="@Model[i].IsThere" class="form-check-input"/>
            <label class="form-check-label">@Model[i].CategoryName</label>
        </div>
        }
    <div class="form-group">
        <button type="submit" class="btn btn-info">Save</button>
    </div>
    </form>