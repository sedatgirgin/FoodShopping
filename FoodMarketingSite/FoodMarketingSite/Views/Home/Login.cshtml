@model UserLoginModel

<form asp-action="Login" asp-controller="Home" method="post" class="p-4 w-50 mx-auto shadow-lg">
    <div class="form-group">
        <label class="col-form-label"> User Name</label>
        @*UserLoginModel içine Required olarak eklediğim hata mesajını gösterir *@
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input type="text" asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label"> Password </label>
        @*UserLoginModel içine Required olarak eklediğim hata mesajını gösterir *@
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"> Remember Me</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info"> Login </button>
    </div>


    @*UserLoginModel içine Required olarak eklediğim bütün hataları tek bir yerde göstermek için;  password hatası için bunu  kullan asp-validation-summary ="ModelOnly" *@
    <div asp-validation-summary="All" class="text-danger"></div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*modele yazılmış mesajlar *@

</form>

@section SedatJavaScript{
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
