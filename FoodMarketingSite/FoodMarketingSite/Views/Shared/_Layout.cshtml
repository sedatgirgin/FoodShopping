<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    @*Navbar*@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Food Marketing</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Basket" asp-controller="Home">Basket <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @*Navbar*@

    <div class="mt-2">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    @* RenderSection false ben bunu her yerde kullanmayacağım. true her yerde kullanacağım*@
    @*jquery-validate | jquery-validation-unobtrusive | jquery kütüphnaleri ile Validation ve Required kontrolleri Client side yapmak için;*@
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
    @*SedatJavaScript diye bir section görürsen bunu buraya yaz.*@
    @*Login.cshtml de SedatJavaScript sectionunu çagırdım*@
    @RenderSection("SedatJavaScript", false)

</body>
</html>

